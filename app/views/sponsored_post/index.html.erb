<h1>Sponsored Posts</h1>

<div class="row">
  <div class="col-md-8">
    <% @sponsored_post.each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to post.title, post %>
          </h4>
          <small>
            <%= post.body %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Sponsored Post", new_sponsored_post_path, class: 'btn btn-success' %>
  </div>
</div>
